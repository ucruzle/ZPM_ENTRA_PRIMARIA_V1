<mvc:View controllerName="sap.pm.entraprimariav1.controller.CabecalhoOrdem" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" class="sapUiSizeCompact">
	
	<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanXL="4" labelSpanL="4" labelSpanM="12" labelSpanS="12"
				  adjustLabelSpan="false" emptySpanXL="0" emptySpanL="0" emptySpanM="0" emptySpanS="0" columnsXL="3" columnsL="3" columnsM="3"
				  singleContainerFullSize="false" title="Edição Primária">
		<f:content>
			 <!-- Primeira coluna - Início -->
			<core:Title text="" level="H6"/>
			<Label text="Status Ordem"/>
			<Input id="sysStatus" tooltip="Status do sistema" type="Text" value="{ path: 'Ordem>/sysStatus' }" enabled="false" />
			<Label text="Tipo de ordem" required="true"/>
			<ComboBox showSecondaryValues="true" items="{ path: 'ListasAuxiliares>/Z_LISTA_TIPOS_ORDEMSet' }" selectedKey="{ path: 'Ordem>/tipoOrdem' }"
				change="handleTipoOrdemChange">
				<core:ListItem key="{ListasAuxiliares>Auart}" text="{ListasAuxiliares>Auart} - {ListasAuxiliares>Txt}"/>
			</ComboBox>
			<Label text="Tipo ativ. manut."  required="true"/>
			<ComboBox showSecondaryValues="true" items="{ path: 'ListasAuxiliaresLocal>/Z_LISTA_ATVMNTSet' }"
				change="validateCombo" selectedKey="{ path: 'Ordem>/tipoAtividadeManutencao' }">
				<core:ListItem key="{ListasAuxiliaresLocal>Ilart}" text="{ListasAuxiliaresLocal>Ilart} - {ListasAuxiliaresLocal>Ilatx}"/>
			</ComboBox>
			
			 <!-- Primeira coluna - Fim -->
			
			 <!-- Segunda coluna - Início -->
			<core:Title text="" level="H6"/>
			<Label text="Equipamento" required="true"/>
			<Input id="frotaNroTecnico" type="Text" showValueHelp="true" valueHelpRequest="handleValueHelpFrota" change="_validaFrota"
				value="{Ordem>/frotaNroTecnico}" valueState="{Ordem>/validFrota}" tooltip="Nº Técnico (Frota)" >
				<layoutData>
					<l:GridData span="XL6 L6 M7 S7"/>
				</layoutData>
			</Input>
			<FlexBox justifyContent="Center" alignItems="Center" class="sapUiTinyMarginTop">
				<core:Icon class="sapUiSmallMarginEnd" tooltip="Ordens anteriores" src="sap-icon://documents" 
					press="showOrdensAnteriores" color="{= ${Ordem>/ordensAnteriores}.length > 0 ? 'red' : 'grey' }" decorative="false"/>
				<core:Icon tooltip="Notificações do laboratório" src="sap-icon://message-popup" 
					press="showNotificacoesLaboratorio" color="{= ${Ordem>/notificacoesLaboratorio}.length > 0 ? 'red' : 'grey' }" decorative="false"/>
				<layoutData>
					<l:GridData span="XL2 L2 M2 S2"/>
				</layoutData>
			</FlexBox>
		    <Label/>
			<Input id="frotaDescricao" value="{ path: 'Ordem>/frotaDescricao' }" enabled="false" tooltip="{ path: 'Ordem>/frotaDescricao' }" />
			<Label text="Garantia / Km/h" />
			<Input id="garantia" value="{ path: 'Ordem>/garantia', type : 'sap.ui.model.type.Date', formatOptions: { style : 'short'} }" 
				enabled="false" tooltip="Garantia" />
			<Input id="kmH" value="{ path: 'Ordem>/kmH' }" enabled="false" tooltip="Km/h" />
			 <!-- Segunda coluna - Fim -->
		</f:content>
	</f:SimpleForm>
	
</mvc:View>